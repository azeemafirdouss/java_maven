pipeline {
    agent any

    tools {
        maven 'Maven'  // Make sure 'Maven' is defined in Jenkins > Global Tool Configuration
    }

    stages {
        stage('Clean') {
            steps {
                bat "mvn clean"
            }
        }

        stage('Install') {
            steps {
                bat "mvn install"
            }
        }

        stage('Test') {
            steps {
                bat "mvn test"
            }
        }

        stage('Package') {
            steps {
                bat "mvn package"
            }
        }
    }

    post {
        always {
            cleanWs() // Optional: Cleans workspace after build
        }
    }
}
