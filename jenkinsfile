
pipeline {
    agent any
    tools{
        maven 'Maven'
    }
    stages {
        stage('git repo & clean') {
            steps {
                //bat "rmdir  /s /q mavenjava"
                bat "git clone https://github.com/azeemafirdouss/java_maven.git"
                bat "mvn clean -f java_maven"
            }
        }
        stage('install') {
            steps {
                bat "mvn install -f java_maven/pom.xml" 
            }
        }
        stage('test') {
            steps {
                bat "mvn test -f java_maven/pom.xml"
            }
        }
        stage('package') {
            steps {
                bat "mvn package -f java_maven/pom.xml"
            }
        }
    }
}

